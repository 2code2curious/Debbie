extends layout

block content
  div.container
    div.row
      div.col-md-5
        != messages('message', locals)
        if errors
          each error, i in errors
            div(class="alert alert-danger") #{error.msg}
        div.row
          div.col-xs-10.col-xs-offset-1
            h3.brand.text-center debbie
        div.row
          div.col-md-6.col-md-offset-3.col-xs-6.col-xs-offset-3
            form(method='POST', action='/users/login')
              div.input-group
                div.input-group-addon.icon
                  i.fa.fa-user
                input.form-control(name='username', type='text', placeholder='Username')
              div.input-group
                div.input-group-addon.icon
                  i.fa.fa-lock
                input.form-control(name='password', type='password', placeholder='Password')
              br
              input.btn.btn-default(type='submit', value='LOGIN')
            p.text-center.register Don't have an account? 
              a(href='/users/register') Sign up here.
      div.col-md-7.hidden-sm.hidden-xs
        div.bg
          div.row
            div.col-md-8.col-md-offset-2
              div.caption
                h1 Manage your work with Debbie.
                ul
                  li Create tasks
                  li Assign due dates
                  li Enhance your productivity
